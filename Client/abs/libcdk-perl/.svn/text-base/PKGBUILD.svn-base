pkgname=libcdk-perl
pkgver=20031210
pkgrel=1
pkgdesc="Perl interface for a curses widget library"
arch=(i686)
license=('custom')
url="http://invisible-island.net/cdk/"
depends=('libcdk')
makedepends=()
source=(ftp://invisible-island.net/cdk/cdk-perl.tar.gz)

md5sums=('d5814507d7d2b5e3e7e5ababfa9e7d86')

build() {
  cd ${srcdir}/cdk-perl-${pkgver}

  sed -i 's|/usr/local/lib|/usr/lib|g;s|/usr/local/include/cdk|/usr/include/cdk|g' Makefile.PL

  perl Makefile.PL

  make DESTDIR=${pkgdir} install
}
